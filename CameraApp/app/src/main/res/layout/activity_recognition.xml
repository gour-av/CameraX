<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".activities.RecognitionActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:text="Shared by Mann Ki Baat Updates Twitter"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_1"
        android:layout_marginStart="20dp"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:layout_below="@id/title"
        android:text="Handle"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_gandhiji"
            android:src="@drawable/gandhiji" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_mann"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:text="Quotes Shared by Mann Ki Baat Updates Twitter"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_mann_1"
                android:layout_marginStart="20dp"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:layout_below="@id/title"
                android:text="Handle"/>
            <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_tech"
            android:src="@drawable/man_wild" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>